@page
@model BookingRoom.Pages.Auth.LoginModel
@{
    ViewData["Title"] = "Đăng Nhập";
}

<div class="login-wrapper">
    <div class="login-container">
        <div class="login-content">
            <div class="login-header">
                <h2>Chào mừng trở lại</h2>
                <p>Vui lòng đăng nhập để tiếp tục</p>
            </div>

            <form method="post" class="login-form">
                <div class="form-floating mb-4">
                    <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                    <label asp-for="Input.Email">Địa chỉ Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-4">
                    <input asp-for="Input.Password" type="password" class="form-control" placeholder="Mật khẩu" />
                    <label asp-for="Input.Password">Mật khẩu</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="rememberMe" />
                        <label class="form-check-label" for="rememberMe">
                            Ghi nhớ đăng nhập
                        </label>
                    </div>
                    <a href="#" class="text-primary text-decoration-none">Quên mật khẩu?</a>
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2">
                    Đăng Nhập
                </button>

                <div class="text-center mt-4">
                    <p>Chưa có tài khoản? <a asp-page="/Auth/Register" class="text-primary">Đăng ký ngay</a></p>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .login-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background: linear-gradient(135deg, #f6f8f9 0%, #e5ebee 100%);
    }

    .login-container {
        width: 100%;
        max-width: 450px;
        padding: 2rem;
    }

    .login-content {
        background-color: white;
        border-radius: 12px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        padding: 2.5rem;
    }

    .login-header {
        text-align: center;
        margin-bottom: 2rem;
    }

        .login-header h2 {
            color: #333;
            margin-bottom: 0.5rem;
        }

        .login-header p {
            color: #777;
        }

    .form-floating > label {
        color: #6c757d;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            transform: translateY(-2px);
        }
</style>