@page
@model BookingRoom.Pages.BookingRoomUser.ServiceModel
@{
    ViewData["Title"] = "Our Services";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600;700&family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/css/animate.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">
</head>

<!-- Page Header Start -->
<div class="container-fluid page-header mb-5 p-0" style="background-image: url('@Url.Content("https://university.fpt.edu.vn/hcm/wp-content/uploads/2024/06/dai-hoc-fpt-tp-hcm-2.jpg")');">
    <div class="container-fluid page-header-inner py-5">
        <div class="container text-center pb-5">
            <h1 class="display-3 text-white mb-3 animated slideInDown">Academic Services</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb justify-content-center text-uppercase">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item text-white active" aria-current="page">Services</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<!-- Page Header End -->
<!-- Services Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title text-center text-primary text-uppercase">Our Services</h6>
            <h1 class="mb-5">Explore <span class="text-primary text-uppercase">FPT University</span></h1>
        </div>
        <div class="row g-4">
            <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                <div class="service-item rounded">
                    <div class="service-icon bg-transparent border rounded p-1">
                        <div class="w-100 h-100 border rounded d-flex align-items-center justify-content-center">
                            <i class="fa fa-graduation-cap fa-2x text-primary"></i>
                        </div>
                    </div>
                    <h5 class="mb-3">Academic Programs</h5>
                    <p class="text-body mb-0">Comprehensive undergraduate and graduate programs in IT, business, and engineering.</p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.3s">
                <div class="service-item rounded">
                    <div class="service-icon bg-transparent border rounded p-1">
                        <div class="w-100 h-100 border rounded d-flex align-items-center justify-content-center">
                            <i class="fa fa-laptop fa-2x text-primary"></i>
                        </div>
                    </div>
                    <h5 class="mb-3">Online Learning</h5>
                    <p class="text-body mb-0">Advanced e-learning platforms and digital education resources.</p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.5s">
                <div class="service-item rounded">
                    <div class="service-icon bg-transparent border rounded p-1">
                        <div class="w-100 h-100 border rounded d-flex align-items-center justify-content-center">
                            <i class="fa fa-flask fa-2x text-primary"></i>
                        </div>
                    </div>
                    <h5 class="mb-3">Research Facilities</h5>
                    <p class="text-body mb-0">State-of-the-art research labs and innovation centers.</p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.7s">
                <div class="service-item rounded">
                    <div class="service-icon bg-transparent border rounded p-1">
                        <div class="w-100 h-100 border rounded d-flex align-items-center justify-content-center">
                            <i class="fa fa-briefcase fa-2x text-primary"></i>
                        </div>
                    </div>
                    <h5 class="mb-3">Career Support</h5>
                    <p class="text-body mb-0">Comprehensive career counseling and industry placement services.</p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.9s">
                <div class="service-item rounded">
                    <div class="service-icon bg-transparent border rounded p-1">
                        <div class="w-100 h-100 border rounded d-flex align-items-center justify-content-center">
                            <i class="fa fa-globe fa-2x text-primary"></i>
                        </div>
                    </div>
                    <h5 class="mb-3">International Programs</h5>
                    <p class="text-body mb-0">Exchange programs and international collaboration opportunities.</p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="1.1s">
                <div class="service-item rounded">
                    <div class="service-icon bg-transparent border rounded p-1">
                        <div class="w-100 h-100 border rounded d-flex align-items-center justify-content-center">
                            <i class="fa fa-users fa-2x text-primary"></i>
                        </div>
                    </div>
                    <h5 class="mb-3">Student Support</h5>
                    <p class="text-body mb-0">Comprehensive student services and support programs.</p>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Services End -->
<!-- Additional Services Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title text-center text-primary text-uppercase">Additional Services</h6>
            <h1 class="mb-5">More <span class="text-primary text-uppercase">Than Just Education</span></h1>
        </div>
        <div class="row g-4">
            <div class="col-lg-3 col-md-6 wow zoomIn" data-wow-delay="0.1s">
                <div class="service-item rounded text-center">
                    <div class="service-icon bg-transparent border rounded p-1 mx-auto mb-3">
                        <i class="fa fa-wifi fa-2x text-primary"></i>
                    </div>
                    <h5 class="mb-3">Free Wi-Fi</h5>
                    <p class="text-body mb-0">Campus-wide high-speed internet access.</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 wow zoomIn" data-wow-delay="0.3s">
                <div class="service-item rounded text-center">
                    <div class="service-icon bg-transparent border rounded p-1 mx-auto mb-3">
                        <i class="fa fa-book fa-2x text-primary"></i>
                    </div>
                    <h5 class="mb-3">Library Services</h5>
                    <p class="text-body mb-0">Extensive digital and physical library resources.</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 wow zoomIn" data-wow-delay="0.5s">
                <div class="service-item rounded text-center">
                    <div class="service-icon bg-transparent border rounded p-1 mx-auto mb-3">
                        <i class="fa fa-laptop-code fa-2x text-primary"></i>
                    </div>
                    <h5 class="mb-3">Tech Resources</h5>
                    <p class="text-body mb-0">Computer labs and cutting-edge technology access.</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 wow zoomIn" data-wow-delay="0.7s">
                <div class="service-item rounded text-center">
                    <div class="service-icon bg-transparent border rounded p-1 mx-auto mb-3">
                        <i class="fa fa-medal fa-2x text-primary"></i>
                    </div>
                    <h5 class="mb-3">Scholarships</h5>
                    <p class="text-body mb-0">Multiple scholarship and financial aid options.</p>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Additional Services End -->
<!-- Testimonial Start -->
<div class="container-xxl testimonial my-5 py-5 bg-dark wow zoomIn" data-wow-delay="0.1s">
    <div class="container">
        <div class="owl-carousel testimonial-carousel py-5">
            <div class="testimonial-item position-relative bg-white rounded overflow-hidden">
                <p class="text-dark mb-3">FPT University provided me with exceptional education and real-world skills that launched my tech career.</p>
                <div class="d-flex align-items-center">
                    <img class="img-fluid flex-shrink-0 rounded" src="~/css/testimonial-1.jpg" style="width: 45px; height: 45px;">
                    <div class="ps-3">
                        <h6 class="fw-bold mb-1">Nguyen Van A</h6>
                        <small>Software Engineer</small>
                    </div>
                </div>
                <i class="fa fa-quote-right fa-3x text-primary position-absolute end-0 bottom-0 me-4 mb-n1"></i>
            </div>
            <div class="testimonial-item position-relative bg-white rounded overflow-hidden">
                <p class="text-dark mb-3">The international programs and industry connections at FPT were invaluable to my professional development.</p>
                <div class="d-flex align-items-center">
                    <img class="img-fluid flex-shrink-0 rounded" src="~/css/testimonial-2.jpg" style="width: 45px; height: 45px;">
                    <div class="ps-3">
                        <h6 class="fw-bold mb-1">Tran Thi B</h6>
                        <small>Global Business Graduate</small>
                    </div>
                </div>
                <i class="fa fa-quote-right fa-3x text-primary position-absolute end-0 bottom-0 me-4 mb-n1"></i>
            </div>
            <div class="testimonial-item position-relative bg-white rounded overflow-hidden">
                <p class="text-dark mb-3">The cutting-edge research facilities and supportive faculty made my learning experience extraordinary.</p>
                <div class="d-flex align-items-center">
                    <img class="img-fluid flex-shrink-0 rounded" src="~/css/testimonial-3.jpg" style="width: 45px; height: 45px;">
                    <div class="ps-3">
                        <h6 class="fw-bold mb-1">Le Van C</h6>
                        <small>Research Scholar</small>
                    </div>
                </div>
                <i class="fa fa-quote-right fa-3x text-primary position-absolute end-0 bottom-0 me-4 mb-n1"></i>
            </div>
        </div>
    </div>
</div>
<!-- Testimonial End -->

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/js/wow.min.js"></script>
<script src="~/js/main.js"></script>

<a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
